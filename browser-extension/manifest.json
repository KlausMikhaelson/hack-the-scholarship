{
  "manifest_version": 3,
  "name": "HackTheScholarship Extension",
  "version": "1.0.0",
  "description": "Browser extension for HackTheScholarship - Auto-fill scholarship applications",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.clerk.accounts.dev/*",
    "https://*.clerk.com/*",
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/*.js", "content/auth-bridge.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}

